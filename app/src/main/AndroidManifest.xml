<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jsondatafromfile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.activity.CheckBoxHandlingActivity"></activity>
        <activity android:name="com.example.activity.NestedRecyclerActivity" />
        <activity android:name="com.example.activity.RecyclerHorizontalActivity" />
        <activity android:name="com.example.activity.RecyclerGridActivity" />
        <activity
            android:name="com.example.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.activity.RecyclerListActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>